<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>data.source</param-name>
        <param-value>java:comp/env/meetplanner</param-value>
    </context-param>
    <listener>
        <listener-class>include.ContextInitializer</listener-class>
    </listener>
    <servlet>
        <servlet-name>AutenticazioneDataLayerMySqlImpl</servlet-name>
        <servlet-class>Implementazione.VerificaSessione</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>status</servlet-name>
        <servlet-class>Implementazione.status</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Implementazione.VerificaSessione</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerificaSessione</servlet-name>
        <servlet-class>Implementazione.VerificaSessione</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AutenticazioneDataLayerMySqlImpl</servlet-name>
        <url-pattern>/AutenticazioneDataLayerMySqlImpl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>status</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerificaSessione</servlet-name>
        <url-pattern>/VerificaSessione</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>jdbc:mysql://localhost:3306/meetplanner?zeroDateTimeBehavior=convertToNull</description>
        <res-ref-name>meetplanner</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
